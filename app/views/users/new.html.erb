<% provide(:title, 'Sign up') %>
<%= bootstrap_form_for("user", :url => users_path, :html => { :class => "form-horizontal"}) do |f| %>

  <div class="well">         <!--Temporary fix- Removed class col-md-6 col-md-offset-3-->
    <fieldset>
      <div class="col-md-8 col-md-offset-2">
        <legend>Sign Up</legend>

        <div class="form-group">
          <%= f.text_field :email, label: "What's your email address?" %>
          <%= f.password_field :password, label: "What's your password going to be(minimum 6 characters)?" %>

          <div class="form-actions">
            <%= f.submit %>
          </div>

        </div>
      </fieldset>
    <% end %>
  </div>
