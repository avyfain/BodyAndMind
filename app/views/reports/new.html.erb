<h1>New report</h1>

<%= bootstrap_form_for("report", :url => reports_path, :html => { :class => "form-horizontal"}) do |f| %>

  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited
        this report from being saved:</h2>
      <ul>
        <% @report.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
 <% end %>

 <div class="well">
  <fieldset>
      <div class="col-lg-4">
            <legend>Post to Your Diary</legend>

      <div class="form-group">
      <%= f.time_field :sleep, label: "When did you go to sleep yesterday?", placeholder: "8PM" %>
      <%= f.time_field :wake, label: "When did you wake up today?", placeholder: "6AM" %>
      <%= f.number_field :weight, label: "Weight (lbs):", placeholder: "180" %>
      <%= f.select :excercise, options_for_select(["Yes", "No"]) %>
      <%= f.select :energy, options_for_select(["1 - Very Tired", "2", "3", "4", "5", "6", "7", "8", "9", "10 - Very Energetic"]) %>
      <%= f.select :mood, options_for_select(["Afraid", "Tense", "Depressed", "Disappointed", "Proud", "Cheerful", "Happy", "Loving", "Humiliated", "Sad"].shuffle) %>      
	  <%= f.select :stress, options_for_select(["1 - Very Stressed", "2", "3", "4", "5", "6", "7", "8", "9", "10 - Very Relaxed"]) %>
      </div>

    <div class="form-actions">
      <%= f.submit %>
    </div>

  </div>
  </fieldset>
<% end %>
</div>

</br>